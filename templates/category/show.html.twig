{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="section wf-section">
        {% include '_component/menu_admin.html.twig' %}
        <h1 class="h2 top-margin app-title">Catégorie {{ category.name}}</h1>
        <div class="content-wrapper">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <a href="{{ path('app_category_index') }}">Retour à lsite</a>

            <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
