{% extends 'base.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}
    <div class="section wf-section">
        {% include '_component/menu_admin.html.twig' %}
        <h1 class="h2 top-margin app-title">Administration plats</h1>
        <div class="content-wrapper">
            <table class="table table-bordered ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image_url</th>
                    <th>Speciality</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for dish in dishes %}
                    <tr>
                        <td>{{ dish.id }}</td>
                        <td>{{ dish.name }}</td>
                        <td>{{ dish.description }}</td>
                        <td>{{ dish.price }}</td>
                        <td style="text-align: center;">
                            <img width="20%" src="{{ vich_uploader_asset(dish, 'image_file') }}" alt="{{ dish.name }}">
                        </td>
                        <td>
                            <img src="https://flagcdn.com/16x12/{{ dish.speciality | lower }}.png" alt="{{ dish.speciality }}">
                        </td>
                        <td>
                            <a href="{{ path('app_dish_show', {'id': dish.id}) }}">détails</a>
                            <a href="{{ path('app_dish_edit', {'id': dish.id}) }}">éditer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="content-wrapper">
            <a href="{{ path('app_dish_new') }}">Ajouter</a>
        </div>
    </div>
{% endblock %}
