{% extends 'base.html.twig' %}

{% block body %}
    <div class="section wf-section">
        <div class="content-wrapper top-margin">
            <div class="breadcrumbs"><a href="{{ path('app_index') }}" class="link">Home</a>
                <div class="slash">/</div>
                <div class="breadcrumb-text">Nos plats et tarifs</div>
            </div>
        </div>
        <h1 class="h2 top-margin">Nos plats et tarifs</h1>
        <div class="content-wrapper">
            <div data-duration-in="300" data-duration-out="100" data-w-id="a2bf0c1f-f52f-aa88-21e4-e7fa505c5bf4" style="opacity:0" data-current="Tab 2" data-easing="ease" class="tabs w-tabs">
                <div class="tabs-menu w-tab-menu">
                    <a data-w-tab="Tab 2" class="tab-link w-inline-block w-tab-link w--current">
                        <div>Dishes</div>
                    </a>
                </div>
                <div class="tabs-content w-tab-content">
                    <div data-w-tab="Tab 2" class="w-tab-pane w--tab-active">
                        <div class="w-dyn-list">
                            <div role="list" class="collection-list w-dyn-items">
                                {% for dish in dishes %}
                                    <div role="listitem" class="w-dyn-item">
                                        {% include '_component/dish_card.html.twig' with {dish: dish} %}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
