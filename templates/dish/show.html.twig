{% extends 'base.html.twig' %}

{% block title %}Dish{% endblock %}

{% block body %}
<div class="section wf-section">
    {% include '_component/menu_admin.html.twig' %}
    <h1 class="h2 top-margin app-title">{{ dish.name }}</h1>
    <div class="content-wrapper">
        <table class="table table-bordered ">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dish.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dish.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dish.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ dish.price }}</td>
            </tr>
            <tr>
                <th>Image_url</th>
                <td>
                    <img width="50%" src="{{ vich_uploader_asset(dish, 'image_file') }}" alt="{{ dish.name }}">
                </td>
            </tr>
            <tr>
                <th>Speciality</th>
                <td><img src="https://flagcdn.com/16x12/{{ dish.speciality | lower }}.png" alt="{{ dish.speciality }}"></td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="content-wrapper">
        <a href="{{ path('app_dish_index') }}">Retour Ã  lsite</a>

        <a href="{{ path('app_dish_edit', {'id': dish.id}) }}">edit</a>

        {{ include('dish/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
