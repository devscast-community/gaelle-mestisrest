{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="section wf-section">
        <div class="content-wrapper top-margin">
            <div class="breadcrumbs"><a href="{{ path('app_index') }}" class="link">Home</a>
                <div class="slash">/</div>
                <div class="breadcrumb-text">Inscription</div>
            </div>
        </div>
        <h1 class="h2 top-margin">Inscrivez-vous</h1>
        <div class="content-wrapper">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.name) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="button-primary">Register</button>

            <a href="{{ path("app_login") }}">vous avez déjà un compte ?</a>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
